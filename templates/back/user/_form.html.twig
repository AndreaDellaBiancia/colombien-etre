
{{ form_start(form) }}
    
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>
        <div class="row">
            <div class="col">
                <div>{{ form_row(form.name) }}</div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.email) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div>{{ form_row(form.password) }}</div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(form.roles) }}
            </div>
        </div>
        <div class="row row--btn"><button >{{ button_label|default('SAVE') }}</button></div>
    
{{ form_end(form) }}