{% extends 'back/base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

<div class="menu_form">
    <div class="menu_form_buttons">
        <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier Admin</a>
        <a href="{{ path('user_browse') }}">Liste Admins</a>
    </div>
    <h1>Admin</h1>
</div>
    
    <table class="table">
        <tbody>
            <tr>
                <th class="th-read">Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th class="th-read">Nom</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th class="th-read">Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th class="th-read">Rôle</th>
                <td>{{ user.roles | json_encode }}</td>
            </tr>
            <tr>
                <th class="th-read">Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th class="th-read">Date de création </th>
                <td>{{ user.createdAt ? user.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th class="th-read">Mis à jour le</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}