{% extends "back/base.html.twig" %}

{% block body %}
<div class="menu_form">
    <div class="menu_form_buttons"><a href="{{ path('user_add') }}">Ajouter Admin</a></div>
    <h1 class="title_form">Liste des Admintrateurs</h1>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Email</th>
            <th>RÃ´le</th>
        </tr>
    </thead>

    <tbody>
        {% for user in users %}

        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.roles | json_encode }}</td>
            <td>
                <a href="{{ path('user_read', {'id': user.id}) }}"><i class="fa-solid fa-glasses"></i></a>
                <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="fa-solid fa-pen"></i></a>
                <a href="{{ path('user_delete', {'id': user.id}) }}"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<p class="go-top"><a href="">Retour en haut <i class="fa-solid fa-arrow-turn-up"></i></a></i></p>
{% endblock %}