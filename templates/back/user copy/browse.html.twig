{% extends "back/base.html.twig" %}

{% block body %}
    <h1>Liste des users</h1>

    <table class="table">
        <a href="{{ path('user_add') }}">Create new</a>
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Password</th>
                <th>Créé le</th>
            </tr>
        </thead>

        <tbody>
            {% for user in users %}
            
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.createdAt | date('d-m-Y') }}</td>
                <td>
                    <a href="{{ path('user_read', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                    <a href="{{ path('user_delete', {'id': user.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}