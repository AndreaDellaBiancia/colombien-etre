{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<ul class="fil-ariane">
    <li>
        <a href="{{ path('home') }}">Accueil</a>
    </li>
    <li>></li>
    <li>Boutique</li>
</ul>

<h2 class="shop-title">Produis conseillés</h2>
<a href="{{ path('shop') }}">
    <p class="found-items">Produits totales : {{totalProducts}}</p>
</a>

{% if foundProducts is defined and searchTerm is defined %}
<p>Votre recherche : "{{ searchTerm }}" - Produits trouvés : {{ foundProducts }} </p>
{% endif %}
<p>
{% if searchCategories is defined %} Votre recherche : 
    {% for category in searchCategories %}
        "{{ category }}"  
    {% endfor %}
    - Produits trouvés : {{ foundProducts }} 
{% endif %}</p>


<section class="shop">

    <div class="filters">
        <div class="filter_search">
            <form action="{{path('searchProduct')}}">
                <input type="search" name="q" placeholder="Search" required="required">
                <input type="submit" value="Go">
            </form>

        </div>
        <div class="filter_checkbox">
            <form method='POST' action='{{path('searchProduct')}}'>

                <input type="checkbox" name="category[]" value="beauté">Beauté<br>
                <input type="checkbox" name="category[]" value="hygiéne">Hygiène<br>
                <input type="checkbox" name="category[]" value="huiles-essentielles">Huiles essentielles<br>
                <input type="checkbox" name="category[]" value="santé">Santé<br>
                <input type="checkbox" name="category[]" value="alimentaire">Alimentaire<br>
                <input type="checkbox" name="category[]" value="entretien">Entretien<br>
                <input type="submit" name="submit" value="Résultats">
            </form>

        </div>

    </div>
    <div class="shop_item-list">
        {% if products == true %}
        {% for product in products %}
        <article class="shop_item shop_item--shop">
            <img src="{{product.picture}}" alt="">
            <div class="shop_item-detail">
                <h4 class="shop_item-brand">{{product.brand}}</h4>
                <h3 class="shop_item-title">{{product.title}}</h3>
                <p class="shop_item-price">€ {{product.price}} </p>
                <a class="shop_item-show" href="{{ product.source }}">
                    <p>Voir le produit</p>
                </a>
            </div>
        </article>
        {% endfor %}
        {% else %}
        <div class="no-products">
            <p>Aucun resultat </span></p>
            <a href="{{ path('shop') }}">
                <p>Revenir à la liste des produits</p>
            </a>
        </div>
        {% endif %}
    </div>

</section>

{% endblock %}