{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<ul class="fil-ariane">
    <li>
        <a href="{{ path('home') }}">Accueil</a>
    </li>
    <li>></li>
    <li><a href="{{ path('corpsEsprit') }}">Corps & Esprit</a></li>
    <li>></li>
    <li>{{pageTitle}}</li>
</ul>

<section class="posts">

    <div class="posts_menu">

        <h2>{{pageTitle}}</h2>

        <div class="search-form">
            <form action="">
                <input class="" name="search" type="search" placeholder="Rechercher...">
                <button class="btn btn-outline-danger" type="submit"><i class="bi bi-search"></i></button>

            </form>
        </div>
    </div>
    {% for post in posts %}

    <article class="post">
        <img src="{{post.thumbnailPicture}}"
            alt="">
        <div class="post_description">
            <h3>{{post.title}}</h3>
            <p class="post_p">{{post.content}}</p>
            <p class="post_show">Lire la suite</p>
        </div>
    </article>
    {% endfor %}

</section>

{% endblock %}